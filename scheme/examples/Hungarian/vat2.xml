						<not><s pred="equals"><v>Transporter</v><v>Vendor</v></s></not>
						<not><s pred="equals"><v>Transporter</v><v>Acquirer</v></s></not>
					</and>
				</body>
				<head>
					<s pred="notTransportedBy"><v>Acquirer</v><v>Selling</v></s>
