			<rule id="amountOfVAT">
				<body>
					<and>
						<s pred="_placeOfPayingVATFor"><v>Selling</v><v>Country</v></s>
						<s pred="rateOfVATIn"><v>Country</v><v>Rate</v></s>
						<s pred="priceOf"><v>Selling</v><v>Price</v></s>
					
						<s pred="eval">
